{
  "name": "core-app-backend",
  "version": "1.0.0",
  "description": "Core Application Backend API",
  "main": "dist/index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "build": "nest build && npm run copy:locales",
    "copy:locales": "node -e \"const fs = require('fs'); const path = require('path'); function copyDir(src, dest) { if (!fs.existsSync(dest)) fs.mkdirSync(dest, {recursive: true}); fs.readdirSync(src).forEach(item => { const srcPath = path.join(src, item); const destPath = path.join(dest, item); if (fs.statSync(srcPath).isDirectory()) copyDir(srcPath, destPath); else fs.copyFileSync(srcPath, destPath); }); } copyDir('./locales', './dist/locales');\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "dev": "nest start --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "ts-node scripts/db.ts migrate",
    "db:rollback": "ts-node scripts/db.ts rollback",
    "db:reset": "ts-node scripts/db.ts reset",
    "db:seed": "ts-node scripts/db.ts seed",
    "db:fresh": "ts-node scripts/db.ts fresh",
    "db:status": "ts-node scripts/db.ts status",
    "db:migrate:prod": "node dist/database/cli.js migrate",
    "db:rollback:prod": "node dist/database/cli.js rollback",
    "db:reset:prod": "node dist/database/cli.js reset",
    "db:seed:prod": "node dist/database/cli.js seed",
    "db:fresh:prod": "node dist/database/cli.js fresh",
    "db:status:prod": "node dist/database/cli.js status"
  },
  "keywords": [
    "api",
    "backend",
    "typescript",
    "nestjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.4.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.19.0",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "minio": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "resend": "^4.0.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
